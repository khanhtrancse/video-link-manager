<!DOCTYPE html>
<html>

<head>
  <title>
    Videos
  </title>
  <% include ../../partials/head.ejs %>
</head>

<body>
  <% include ../../partials/admin-nav.ejs %>

  <div class="container">
    <div class="row justify-content-center align-item-center card-container">
      <small class="text-danger"><%=error%></small>
      <%if(videos.length ==0){%>
      <!--No video-->
      <h3 class="text-info my-5">No videos</h3>
      <%} else {
        for(let i = 0;i< videos.length;i++){
          let statusText;
          let itemClass;
          const status = videos[i].status;
          if(status == 'submitted'){
            statusClass = "text-info";
            statusText='Submitted';
          } else if(status == 'approved'){
            statusClass = "text-success";
            statusText='Approved';
            itemClass = "video-item-approved";
          } else {
            statusClass = "text-danger";
            statusText='Rejected';
            itemClass = "video-item-rejected";
          }
        %>
      <!--Show list video-->
      <div class="col-12 row video-item-background <%=itemClass%> mb-3 mt-1 py-3">
        <div class="col-12 col-md-3">
          <img class="col-12" src="<%=videos[i].thumbnail%>" />
        </div>
        <div class="col-12 col-md-9">
          <div class="col-12 mx-0 px-0 row">
            <h3 class="col-9 px-0">
              <%=videos[i].subject %>
            </h3>
            <div class="col-3 row justify-content-center align-item-center py-auto my-auto">
              <div class="<%=statusClass%>">
                <%=statusText%>
              </div>

            </div>
          </div>
          <div><b>Type:</b>
            <%=videos[i].type%>
          </div>
          <div><b>Time:</b>
            <%=videos[i].time%>
          </div>
          <div><b>Description:</b>
            <p class="mx-3">
              <%=videos[i].description%>
            </p>
          </div>
        </div>
      </div>
      <%}}%>

    </div>

  </div>

</body>

</html>